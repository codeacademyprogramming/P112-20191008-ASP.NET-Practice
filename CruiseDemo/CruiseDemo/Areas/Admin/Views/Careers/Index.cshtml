@model IEnumerable<CruiseDemo.Models.Vacancy>
@{
    ViewBag.Title = "Vacandies";
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Vakansiyalar</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlıq</th>
                        <th>Təsvir</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlıq</th>
                        <th>Təsvir</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var vacancy in Model)
                    {
                        <tr>
                            <td>@vacancy.Title</td>
                            <td>@vacancy.Description</td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


