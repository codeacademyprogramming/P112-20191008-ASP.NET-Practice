@model CruiseDemo.Models.TechnologyViewModel
@{
    ViewBag.Title = "Index";
}
<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('Public/images/hero_3.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Our Technology</h1>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="site-section section-2">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-6">
                <span class="text-primary">Our Features</span>
                <h2 class="mb-4">The technology for the future generation</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis provident eius ratione velit, voluptas laborum nemo quas ad necessitatibus placeat?</p>
            </div>
        </div>
    </div>
    @for (int i = 0; i < Model.Features.Count; i++)
    {

        <div class="container site-section">
            <div class="row align-items-stretch feature-2">
                <div class="col-lg-9 feature-2-img @(i%2==1 ? "order-lg-2" : "")">
                    <img src="~/Public/images/@Model.Features[i].Photo" alt="@Model.Features[i].Title" class="img-fluid">
                </div>
                <div class="col-lg-3 feature-2-contents pl-lg-5">
                    <div class="fixed-content">
                        <span class="caption">0@(i + 1).</span>
                        <h3 class="mb-5">@Model.Features[i].Title</h3>
                        @Html.Raw(Model.Features[i].Content)
                    </div>
                </div>
            </div>
        </div>


    }
</div>


<div class="container site-section">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-md-6">
            <span class="text-primary">Design for the future</span>
            <h2 class="mb-4">The technology for the future generation</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis provident eius ratione velit, voluptas laborum nemo quas ad necessitatibus placeat?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="row">

                @foreach (var advantage in Model.Advantages)
                {
                    <div class="col-lg-6 mr-auto pr-lg-5">
                        <div class="feature-3">
                            <h3>@advantage.Title</h3>
                            <p>@advantage.Content</p>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>

<div class="site-section section-4">
    <div class="container">
        @foreach (var testimonial in Model.Testimonials)
        {
            <div class="row justify-content-center text-center">
                <div class="col-md-7">
                    <blockquote class="testimonial-1">
                        <span class="quote quote-icon-wrap"><span class="icon-format_quote"></span></span>
                        <p>@testimonial.Content</p>
                        <cite><span class="text-black">@testimonial.Fullname</span> &mdash; <span class="text-muted">@testimonial.Position</span></cite>
                    </blockquote>
                </div>
            </div>
        }


    </div>
</div>
