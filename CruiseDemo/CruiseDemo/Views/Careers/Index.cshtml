@model CruiseDemo.Models.CareersViewModel
@{
    ViewBag.Title = "Index";
}
<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('Public/images/hero_3.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Careers</h1>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var vacancy in Model.Vacancies)
                {
                    <div class="careers-1">
                        <span class="roles">@vacancy.Title</span>
                        <h3><a href="#">@vacancy.Description</a></h3>
                    </div>
                }


            </div>
        </div>
    </div>
</div>


<div class="container site-section">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-md-6">
            <span class="text-primary">Be part of talented people</span>
            <h2 class="mb-4">What Are The Benifits For Joining Us</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis provident eius ratione velit, voluptas laborum nemo quas ad necessitatibus placeat?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="row">
                @foreach (var advantage in Model.Advantages)
                {
                    <div class="col-lg-6 mr-auto pr-lg-5">
                        <div class="feature-3">
                            <h3>@advantage.Title</h3>
                            <p>@advantage.Content</p>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>
