@model CruiseDemo.Models.AboutViewModel
@{
    ViewBag.Title = "Index";
}


<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('Public/images/hero_3.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>About Us</h1>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                </div>
            </div>
        </div>
    </div>
</div>


@for (int i = 0; i < Model.AboutItems.Count; i++)
{

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 mb-lg-0 @( i % 2 == 1 ? "order-lg-2" : "")">
                    <img src="~/Public/images/@Model.AboutItems[i].Photo" alt="Image" class="img-fluid">
                </div>
                <div class="col-lg-4 ml-auto">
                    <h2>@Model.AboutItems[i].Title</h2>
                     @Html.Raw(Model.AboutItems[i].Content)
                </div>
            </div>
        </div>
    </div>

}



<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-6">
                <span class="text-primary">Our Team</span>
                <h2 class="mb-4">Meet Our Team</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis provident eius ratione velit, voluptas laborum nemo quas ad necessitatibus placeat?</p>
            </div>
        </div>
        <div class="row align-items-stretch">


            @foreach (var employee in Model.Employees)
            {
                <div class="col-lg-4 col-md-6 mb-5">
                    <div class="post-entry-1 h-100">
                        <a href="@Url.Action("Details", "Employee", new { Id = employee.Id})">
                            <img src="~/Public/images/@employee.Photo" alt="@employee.Firstname @employee.Lastname"
                                 class="img-fluid">
                        </a>
                        <div class="post-entry-1-contents">
                            <span class="meta">@employee.Position</span>
                            <h2>@employee.Firstname @employee.Lastname</h2>
                            <p>@employee.Description</p>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>



<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-6">
                <span class="text-primary">Our Careers</span>
                <h2 class="mb-4">The technology for the future generation</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis provident eius ratione velit, voluptas laborum nemo quas ad necessitatibus placeat?</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @foreach (var vacancy in Model.Vacancies)
                {
                    <div class="careers-1">
                        <span class="roles">@vacancy.Title</span>
                        <h3><a href="#">@vacancy.Description</a></h3>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<div class="site-section section-4">
    <div class="container">
        @foreach (var testimonial in Model.Testimonials)
        {
            <div class="row justify-content-center text-center">
                <div class="col-md-7">
                    <blockquote class="testimonial-1">
                        <span class="quote quote-icon-wrap"><span class="icon-format_quote"></span></span>
                        <p>@testimonial.Content</p>
                        <cite><span class="text-black">@testimonial.Fullname</span> &mdash; <span class="text-muted">@testimonial.Position</span></cite>
                    </blockquote>
                </div>
            </div>
        }
    </div>
</div>
